<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity Supplier.
    -->
    <changeSet id="20181012124128-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="contact_info_id"
                                 baseTableName="supplier"
                                 constraintName="fk_supplier_contact_info_id"
                                 referencedColumnNames="id"
                                 referencedTableName="contact_info"/>

        <addForeignKeyConstraint baseColumnNames="suppliers_id"
                                 baseTableName="supplier_adverts"
                                 constraintName="fk_supplier_adverts_suppliers_id"
                                 referencedColumnNames="id"
                                 referencedTableName="supplier"/>
        <addForeignKeyConstraint baseColumnNames="adverts_id"
                                 baseTableName="supplier_adverts"
                                 constraintName="fk_supplier_adverts_adverts_id"
                                 referencedColumnNames="id"
                                 referencedTableName="adverts"/>
        
        <addForeignKeyConstraint baseColumnNames="suppliers_id"
                                 baseTableName="supplier_stock"
                                 constraintName="fk_supplier_stock_suppliers_id"
                                 referencedColumnNames="id"
                                 referencedTableName="supplier"/>
        <addForeignKeyConstraint baseColumnNames="stocks_id"
                                 baseTableName="supplier_stock"
                                 constraintName="fk_supplier_stock_stocks_id"
                                 referencedColumnNames="id"
                                 referencedTableName="stock"/>
        
    </changeSet>
</databaseChangeLog>
